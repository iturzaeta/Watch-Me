<div class="mb-2 bg-dark text-white video-position-down af">

  <div class="video-l">
    <video
      id="video"
      class="video-js vjs-default-skin video-position-down"
      autoplay
      loop
      controls
      width="640" height="264"
      data-setup='{ "aspectRatio":"640:267","techOrder": ["youtube"], "sources": [{ "type": "video/youtube", "src": "{{movie}}"}],"youtube": { "start": 5 } }'
    >
    </video>
  </div>
  <div class="video-black">

    <div class="fixed-top position-relative video-down">
      
      <div class="d-flex justify-content-end mr-5">
        <div><h1>{{data.title}}</h1></div>
      </div>

      <div class="d-flex bd-highlight">
        <div class="m-3">
          <img src="{{data.poster}}">
        </div>
        <div class="mt-3">
          <h5>{{data.plot}}</h5>
        </div>
        <div class="container mx-auto m3" style="width: 30%;">
          {{!-- <form method="POST" action="/like"> --}}
          <i class="far fa-star fa-5x mt-3"></i><h4 class="mt-2">Add Favorite list</h4>
          <i class="fas fa-dollar-sign fa-5x mt-3"></i><h4 class="mt-2">{{data.boxoffice}}</h4>
          <i class="fas fa-hourglass-half fa-5x mt-3"></i><h4 class="mt-2">{{data.runtime}}</h4>
          <i class="far fa-star fa-5x mt-3"></i><h4 class="mt-2">{{data.rating}}</h4>
        </div>
        <div class="container mx-auto m3" style="width: 30%;">
          <i class="far fa-calendar-alt fa-5x mt-3"></i><h4 class="mt-2">{{data._year_data}}</h4>
          <i class="fas fa-theater-masks fa-5x mt-3"></i><h4 class="mt-2">{{data.genres}}</h4>
          <i class="fas fa-film fa-5x mt-3"></i><h4 class="mt-2">{{data.director}}</h4>
        </div>

      </div>
    </div>
  </div>


<div class="d-flex align-items-start m-3">
    <img class="mr-3" src="{{playlist.[0].images.[0].url}}">

    <iframe src="https://open.spotify.com/embed/playlist/{{playlist.[0].id}}" width="100%" height="500" frameborder="0" allowtransparency="true" allow="encrypted-media"></iframe>

</div>
